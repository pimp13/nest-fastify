model Project {
    id          String   @id @default(uuid())
    name        String
    key         String   @unique
    description String?
    ownerId     String
    createdAt   DateTime @default(now())

    owner    User          @relation("ProjectOwner", fields: [ownerId], references: [id])
    sprints  Sprint[]
    issues   Issue[]
    roles    ProjectRole[]
    workflow Workflow?

    @@index([ownerId])
}
